{
    "compilerOptions": {
      "target": "ES6", // Define a versão do ECMAScript para a qual o código será compilado
      "module": "commonjs", // Define o sistema de módulos (CommonJS é o padrão para Node.js)
      "outDir": "./dist", // Diretório de saída para os arquivos JavaScript compilados
      "rootDir": "./src", // Diretório raiz dos arquivos TypeScript
      "strict": true, // Habilita todas as verificações de tipo estritas
      "esModuleInterop": true, // Permite a importação de módulos CommonJS como módulos ES
      "skipLibCheck": true // Ignora a verificação de tipos nas bibliotecas de definição
    },
    "include": ["src/**/*"], // Inclui todos os arquivos TypeScript na pasta src
    "exclude": ["node_modules"] // Exclui a pasta node_modules
  }